<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="PLF_AvaloniaOriented.Views.MessageBoxWindow"
        Title="Warning"
		Width="300"
		Height="150">
	<StackPanel Margin="10">
		<Label Width="290" Height="80" 
			   HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
			<TextBlock Name="InfoArea" TextWrapping="Wrap"/>
		</Label>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
			<Button Name="OkButton" Content="OK" Margin="5"/>
			<Button Name="CancelButton" Content="Cancel" Margin="5"/>
		</StackPanel>
	</StackPanel>
</Window>